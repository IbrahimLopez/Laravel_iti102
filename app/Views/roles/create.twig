{% extends 'partials/layout.twig' %}
{% block conten %}
 <div class="page-header">
        <h4>Ficha de registro de roles</h4>
    </div>
    <form action="{{'roles/create'|url}}" method="post" >
        <div class="form-group">
            <div class="col-md-5">
                <div class="form-group">
                    <label for="" >Nombre</label>
                    <input name="nombre" type="text" class="form-control" placeholder="Ingrese Nombre">
                    <label class="form-validation-failed" data-key="nombre"> </label>
                </div>
            </div> 
            <br>
            <div class="col-md-5">
                <div class="text-left">
                <a href="{{ 'roles/'|url }}" class="btn btn-default"> Cancelar</a>
                <button data-ajax="true" type="submit" class="btn btn-primary">
                    Guardar
                </button>
            </div>
            </div>                     
        </div>             
    </form>
{% endblock %}