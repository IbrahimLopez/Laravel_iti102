{% extends 'partials/layout.twig' %}
{% block conten %}
 <div class="page-header container">         
        <h4>Catalago de Roles</h4>
        <div class="pull-right">
            <a href="{{ 'roles/create'|url }}" class="btn btn-default">+</a>
        </div>         
        <div class="clearfix"></div>
    </div>
    <table class="table table-condensed table-bordered table-hover">         
        <thead>
        <tr class="text-center">
            <td>NOMBRE</td>          
            <td></td>
        </tr>         
        </thead>
        <tbody>
        {% for rol in roles %}
            <tr>
                <td>{{ rol.nombre }}</td>
               
                <td>
                    <a href="{{'roles/edit/'|url}}{{rol.id}}" class="btn btn-primary" >
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>                   
                    <a href="{{'roles/delete/'|url}}{{rol.id}}" class="btn btn-danger" aria-label="Left Align">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>                        
        {% endfor %}
        </tbody>
    </table>
{% endblock %}