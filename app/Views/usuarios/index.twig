{% extends 'partials/layout.twig' %}
{% block conten %}


    <div class="page-header container">
        <h4>Catalago de Usuarios</h4>
        <div class="pull-right">
            <a href="{{ 'usuarios/nusuario'|url }}" class="btn btn-default">+</a>
        </div>
        <div class="clearfix"></div>
    </div>
    <table class="table table-condensed table-bordered table-hover">
        <thead>
        <tr class="text-center">
            <td>NOMBRE</td>
            <td>APELLIDOS</td>
            <td>EMAIL</td>
            <td>ROL</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apaterno ~ " " ~ usuario.amaterno  }}</td>
                <td>{{ usuario.correo }}</td>
                <td>{{ usuario.rol.nombre }}</td>
                <td>
                    <a href="{{'usuarios/actualizar_u/'|url}}{{usuario.id}}" class="btn btn-primary" >
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>                   
                    <a href="{{'usuarios/eliminar_u/'|url}}{{usuario.id}}" class="btn btn-danger" aria-label="Left Align">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>                        
        {% endfor %}
        </tbody>
    </table>

{% endblock %}